<div class="container">

  <table class="table table-striped table-bordered">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Total Investment</th>
    </tr>

    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.Firstname %></td>
        <td><%= account.Lastname %></td>
        <td><%= account.PersonalEmail %></td>
        <td><%= account.FinServ__TotalInvestments__c %></td>
      </tr>
    <% end %>
  </table>

</div>
